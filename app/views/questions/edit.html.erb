<h1>Edit your question</h1>
  <div class="row">
    <div class="col-md-4">
      <p>You can change your question details here.</p>
    </div>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter your question here" %>
      </div>
      <div class="form-group">
        <%= f.label :resolved %>
        <%= check_box("question", "resolved", {}, true, false) %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success'%>
      </div>
        <% end %>
  </div>
